# Environment Variables for RAG Demo Chatbot
# Copy this file to .env and fill in your actual values

# =============================================================================
# Gemini API Key - Two Options Available
# =============================================================================
# OPTION 1 (Recommended for developers): 
#   Provide key here - app will use it automatically
GEMINI_API_KEY=your_gemini_api_key_here

# OPTION 2 (User input mode): 
#   Leave empty or comment out - UI will prompt user to input key
# GEMINI_API_KEY=

# Get your free API key at: https://aistudio.google.com/app/apikey
# =============================================================================

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_MODE=docker  # Options: embedded, docker, cloud

# Session Configuration
SESSION_TTL_MINUTES=30

# RAG Configuration
SIMILARITY_THRESHOLD=0.7
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# Gemini Configuration
GEMINI_MODEL=gemini-1.5-flash  # Cheapest model suitable for RAG
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_TEMPERATURE=0.1

# For Qdrant Cloud (if QDRANT_MODE=cloud)
# QDRANT_API_KEY=your_qdrant_cloud_api_key
# QDRANT_URL=https://your-cluster.qdrant.io
