# ==============================================
# RAG Demo Chatbot - Backend Environment Variables
# ==============================================

# Gemini API Configuration (Required)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_TEMPERATURE=0.1

# Content Moderation
ENABLE_CONTENT_MODERATION=True

# Qdrant Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_MODE=docker
# For cloud mode, uncomment and set:
# QDRANT_API_KEY=your_qdrant_api_key
# QDRANT_URL=your_qdrant_url

# Session Configuration
SESSION_TTL_MINUTES=10

# RAG Configuration
SIMILARITY_THRESHOLD=0.5
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# Token Configuration
TOKEN_LIMIT=1000000
TOKEN_WARNING_THRESHOLD=0.8

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Email Configuration for Contact Form
# Note: The recipient email is hardcoded in config.py for security
# Only configure SMTP credentials here
CONTACT_EMAIL_RECIPIENT=jenhao.hsiao2@gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# For Gmail, create an App Password: https://myaccount.google.com/apppasswords
SMTP_USERNAME=your_gmail_account@gmail.com
SMTP_PASSWORD=your_gmail_app_password

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000
